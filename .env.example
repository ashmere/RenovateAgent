# Renovate PR Assistant - Environment Configuration

# GitHub Configuration
# Required: GitHub organization to monitor
GITHUB_ORGANIZATION=your-org-name

# Authentication: Choose GitHub App OR Personal Access Token

# Option 1: GitHub App (Production)
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY_PATH=./private-key.pem
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Option 2: Personal Access Token (Development/Testing)
# Set GITHUB_APP_ID=0 to enable PAT mode
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_token_here

# Repository Management
# Optional: Comma-separated list of specific repositories to monitor
# If not set, will monitor ALL repositories in the organization
# Format: repo1,repo2,repo3 (without organization prefix)
# GITHUB_REPOSITORY_ALLOWLIST=repo1,repo2,repo3

# Test Repositories (for testing and validation)
# Comma-separated list of repositories to use for testing
# Format: org/repo1,org/repo2
GITHUB_TEST_REPOSITORIES=your-org/test-repo1,your-org/test-repo2

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///./renovate_agent.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Dependency Fixer Configuration
ENABLE_DEPENDENCY_FIXING=true
SUPPORTED_LANGUAGES=python,typescript,go
CLONE_TIMEOUT=300
DEPENDENCY_UPDATE_TIMEOUT=600

# Dashboard Configuration
DASHBOARD_ISSUE_TITLE=Renovate PR Assistant Dashboard
UPDATE_DASHBOARD_ON_EVENTS=true

# Rate Limiting
GITHUB_API_RATE_LIMIT=5000
WEBHOOK_RATE_LIMIT=1000

# Security
ALLOWED_ORIGINS=https://github.com
ENABLE_CORS=true

# GitHub API Configuration
GITHUB_API_URL=https://api.github.com
